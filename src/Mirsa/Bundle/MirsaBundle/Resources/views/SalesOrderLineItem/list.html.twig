{% extends '::app.html.twig' %}

{% block body %}
    <h1>Sales Order Line items</h1>
    {% include '@MirsaMirsa/SalesOrderLineItem/datatable.html.twig' with { url: path('api_mirsa_sales_order_line_item_list') } %}

    <button class="btn clearFilter btn-info"><i class="fa fa-trash"></i> Clear Filter</button>
    <a class="exportButton" href="{{ path('mirsa_sales_order_line_item_export') }}"><button class="btn btn-primary"><i class="fa fa-file-pdf-o"></i> Generate Excel CSV</button></a>
    
<script>
    $(document).ready(function () {

        $('.clearFilter').click(function() {
        	$.each($('input'), function(){
        		$(this).val('');
        	});
            localStorage.clear();
            location.reload();
        });

    $('.exportButton').on('click', function(e) {
            e.preventDefault();
            window.location.href = $('.exportButton').attr('href') + '?customer=' + $('.customer input').val() + '&orderDate=' + $('.orderDate input').val() + '&orderNumber=' +  $('.orderNumber input').val() + '&stockCode=' + $('.stockCode input').val() + '&description=' + $('.description input').val() + '&orderType=' + $('.orderType input').val();
        });        
    });        
</script> 

{% endblock %}
