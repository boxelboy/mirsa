{% extends '::app.html.twig' %}

{% block body %}

    <h1>Work Order Inspection Product View</h1>

    {% include '@MirsaMirsa/WorkOrder/view.html.twig' with { workOrder: workOrder} %}
    
    <h1>Work Order Line Items</h1>
    {% include '@MirsaMirsa/WorkOrderInspectionLineItem/datatable.html.twig' with { url: path('api_mirsa_work_order_inspection_line_items', {'workOrder': workOrder.id} )} %}

    <button class="btn clearFilter btn-info"><i class="fa fa-trash"></i> Clear Filter</button> <a href="{{ path('mirsa_work_order_inspection_download', {'workOrder': workOrder.id}) }}"><button class="hideBtn btn btn-primary"><i class="fa fa-file-pdf-o"></i> Generate CSV</button</a>

    
<script>
    $(document).ready(function () {

        $('.clearFilter').click(function() {
        	$.each($('input'), function(){
        		$(this).val('');
        	})
            localStorage.clear();
            location.reload();
        });    
    });        
</script> 

{% endblock %}
