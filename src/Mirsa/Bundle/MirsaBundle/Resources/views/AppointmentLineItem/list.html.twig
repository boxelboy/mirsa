{% extends '::app.html.twig' %}

{% block body %}
    
    {% include '@MirsaMirsa/Appointment/view.html.twig' with { appointment: appointment} %}
    
    <h1>Appointment Line Items</h1>
    {% include '@MirsaMirsa/AppointmentLineItem/datatable.html.twig' with { url: path('api_mirsa_appointment_line_item_list', {appointment : appointment.id } )} %}

    <button class="btn clearFilter btn-info"><i class="fa fa-trash"></i> Clear Filter</button> 
    
<script>
    $(document).ready(function () {

        $('.clearFilter').click(function() {
        	$.each($('input'), function(){
        		$(this).val('');
        	})
            localStorage.clear();
            location.reload();
        });    
    });        
</script> 
{% endblock %}
