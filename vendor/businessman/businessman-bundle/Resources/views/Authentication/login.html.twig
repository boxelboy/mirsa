{% extends '::login.html.twig' %}

{% block body %}
    <div id="wrapper">
        <h1>Sign in</h1>

        {% if error %}
            <div class="alert alert-danger">
                <i class="fa fa-exclamation-circle"></i>
                <strong>Unable to log in using the details provided.</strong> {{ error.message }}.
            </div>
        {% endif %}

        <form action="{{ path('businessman_login_check') }}" method="post" autocomplete="off">
            <div>
                <label for="username">Your username:</label>
                <input type="text" id="username" name="_username" value="{{ lastUsername }}" autocomplete="off" />
            </div>
            <div>
                <label for="password">Your password:</label>
                <input type="password" id="password" name="_password" autocomplete="off" />
            </div>
            <div>
                <label>
                    <input type="checkbox" name="_remember_me" />
                    Remember me
                </label>
            </div>
            <div>
                <button type="submit">Login</button>
            </div>
        </form>
    </div>
{% endblock %}