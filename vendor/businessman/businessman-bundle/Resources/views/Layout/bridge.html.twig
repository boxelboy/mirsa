{% extends '::app.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style type="text/css">
        body {
            background: #ECE9E0;
            height: 100%;
            overflow: hidden;
        }
        div#container {
            float: none;
            width: auto;
            height: 100%;
            overflow-x: hidden;
            overflow-y: scroll;
            padding: 0;
        }
        iframe {
            margin: 0;
            width: 100%;
            height: 100%;
        }
    </style>
{% endblock %}

{% block layout_body %}
    <div id="container">
        {% block body %}{% endblock %}
    </div>
{% endblock %}