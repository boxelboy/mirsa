{% extends '::app.html.twig' %}

{% block body %}
    <h1>Client contacts</h1>
    <table class="table table-hover table-bordered rowlink" data-datatable="true" data-url="{{ path('api_mirsa_client_contacts_list') }}">
        <thead>
            <tr>
                <th data-source="id" data-template="client_contacts_actions" data-width="10px"></th>
                <th data-source="forename" data-sortable="true" data-searchable="true" data-width="100px">Forename</th>
                <th data-source="surname" data-sortable="true" data-searchable="true" data-width="100px">Surname</th>
                <th data-source="email" data-sortable="true" data-searchable="true">Email</th>
                <th data-source="telephone" data-sortable="true" data-searchable="true" data-width="100px">Telephone</th>
                <th data-source="mobile" data-sortable="true" data-searchable="true" data-width="100px">Mobile</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <script type="dot/template" data-name="client_contacts_actions">
        {% verbatim %}
            <a href="{{=Routing.generate('mirsa_client_contacts_view', { contact: it.id })}}" class="btn btn-xs btn-primary">
                <i class="fa fa-chevron-right"></i>
            </a>
        {% endverbatim %}
    </script>
{% endblock %}
