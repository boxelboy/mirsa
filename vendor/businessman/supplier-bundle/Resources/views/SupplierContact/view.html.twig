{% extends '::app.html.twig' %}

{% block body %}
    <h1>
        Contact details
        <small>{{ contact.forename }} {{ contact.surname }}</small>
    </h1>
    <div class="profile">
        <div class="col-md-3">
            {% if contact.photo %}
                <img src="{{ path('SynergizeBundle_container', { encodedUrl: contact.photo.encodedUrl }) }}" />
            {% else %}
                <img src="{{ asset('bundles/businessmanbusinessman/img/default-avatar.png') }}" />
            {% endif %}
            <ul class="fa-ul actions">
                <li class="header">
                    Actions
                </li>
                {% if contact.email %}
                    <li>
                        <i class="fa fa-envelope fa-li"></i>
                        <a class="btn btn-link" href="mailto:{{ contact.email }}">
                            Send email
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <div class="col-md-9">
            <div class="details">
                {% if contact.supplier %}
                    <div>
                        <div>
                            Supplier
                        </div>
                        <div>
                            <a href="{{ path('suppliers_view', { supplier: contact.supplier.id }) }}">
                                {{ contact.supplier.name ? contact.supplier.name : contact.supplier.id }}
                            </a>
                        </div>
                    </div>
                {% endif %}
                <div>
                    <div>
                        Email
                    </div>
                    <div>
                        {{ contact.email|default('-') }}
                    </div>
                </div>
                <div>
                    <div>
                        Telephone
                    </div>
                    <div>
                        {{ contact.telephone|default('-') }}
                    </div>
                </div>
                <div>
                    <div>
                        Mobile
                    </div>
                    <div>
                        {{ contact.mobile|default('-') }}
                    </div>
                </div>
                <div>
                    <div>
                        Fax
                    </div>
                    <div>
                        {{ contact.fax|default('-') }}
                    </div>
                </div>
                <div>
                    <div>
                        Other
                    </div>
                    <div>
                        {{ contact.other|default('-') }}
                    </div>
                </div>
                <div>
                    <div>
                        Skype
                    </div>
                    <div>
                        {{ contact.skype|default('-') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ extendable_block('supplier_contact_view', { contact: contact.id }) }}
{% endblock %}
